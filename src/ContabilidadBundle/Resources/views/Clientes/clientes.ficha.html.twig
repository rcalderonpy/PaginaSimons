{% extends '@Contabilidad/BaseFormularios.html.twig' %}



{% block title %}
	{{ parent() }}
	Ficha
{% endblock %}

{% block cianv %}
		<img src="{{ asset(cianv) }}" alt="Cédula Anverso" class="img-rounded center-block">
{% endblock %}


{% block areatrabajo %}
	<div>



		
		<!-- Nav tabs -->
		<ul class="nav nav-tabs" role="tablist">
			<li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Generales</a></li>
			<li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Impositivos</a></li>
			<li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Facturas</a></li>
			<li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">Otros</a></li>
				{{ form_start(delete_form) }}
				<input type="submit" value="Eliminar Cliente" class="btn btn-danger pull-right">
				{{ form_end(delete_form) }}
		</ul>
		
		<!-- Tab panes -->
		<div class="tab-content">
			<div role="tabpanel" class="tab-pane fade in active" id="home">
				
				<p>
				<div class="panel panel-default">
					<div class="panel-body">
						{#//primera fila#}
						<div class="row">
							<div class="col-md-6">
								<strong> Cliente: </strong>{{ cliente.nombres~' '~cliente.ape1~' '~cliente.ape2}}
							</div>
							<div class="col-md-3">
								<strong> RUC: </strong>{{ cliente.ruc~' - '~cliente.dv }}
							</div>
							<div class="col-md-3">
								<strong> Estado: </strong>{{ cliente.estado }}
							</div>
						</div>
					</div>
				
				</div>
				
				</p>
			</div>
			<div role="tabpanel" class="tab-pane fade" id="profile">
				<p>
				<div class="panel panel-default">
					<div class="panel-body">
						{#//primera fila#}
						<div class="row form-inline">
						
						</div>
					
					</div>
				
				</div>
				
				</p>
			</div>
			<div role="tabpanel" class="tab-pane fade" id="messages">
				<p>
				<div class="panel panel-default">
					<div class="panel-body">
						{#//primera fila#}
						<div class="row form-inline">
						
						</div>
					
					</div>
				
				</div>
				
				</p>
			</div>
			<div role="tabpanel" class="tab-pane fade" id="settings">
				<p>
				<div class="panel panel-default">
					<div class="panel-body">
						{#//primera fila#}
						<div class="row form-inline">
						
						</div>
					
					</div>
				
				</div>
				
				</p>
			</div>
		</div>
	
	</div>
	
	
	
	<div class="row">
		<div class="col-md-6">
			<div class="panel panel-default" id="periodo_seleccionado">
				<div class="panel-heading" >
					<strong>Selección de Periodos</strong>
					<button class="btn btn-success btn-xs pull-right" type="button" data-toggle="modal" data-target=".bs-example-modal-sm">Nuevo</button>
					{#<button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-sm">Small modal</button>#}
				</div>
				<div class="panel-body">
					<table class="table table-condensed table-bordered" id="tper">
						<thead>
						<tr>
							<th class="text-center">Año</th>
							<th class="text-center">Mes</th>
							<th class="text-center">Bloq</th>
							<th class="text-center">Seleccionar</th>
							<th class="text-center">Borrar</th>
						</tr>
						</thead>
						<tbody>
						{% for periodo in periodos %}
							
							<tr {% if periodo.bloqueado ==1 %} class="bg-success" {% endif %}>
								<td><p class="small text-center"  > {{ periodo.ano }} </p></td>
								<td><p class="small text-center" > {{ periodo.mes }} </p></td>
								<td class="text-center"><input type="checkbox" class="small" value="" disabled {% if periodo.bloqueado==1 %} checked {% endif %}></input></td>
								<td class="text-center">
									<a href="{{ path('contabilidad_periodo_cliente', {'id_cliente':cliente.id, 'mes':periodo.mes, 'ano':periodo.ano}) }}" class="fa fa-arrow-circle-right"> Seleccionar</a>
								</td>
								<td class="text-center">
									<a href="{{ path('contabilidad_periodo_delete', {'id_periodo':periodo.id, 'id_cliente':cliente.id}) }}" class="fa fa-times"> Borrar</a>
								</td>
							</tr>
						{% endfor %}
						</tbody>
					</table>
				
				</div>
			</div>
		</div>
	</div>
	
	<!-- Small modal -->
	
	
	<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
		<div class="modal-dialog modal-sm" role="document">
			<div class="modal-content">
				{{ form_start(form) }}
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title">Ingrese el Periodo</h4>
				</div>
				<div class="modal-body">
					{{ form_row(form.mes, {'attr':{'autofocus':true}}) }}
					{{ form_row(form.ano) }}
					
				</div>
				<div class="modal-footer">
						<input type="submit" value="Guardar" class="btn btn-group btn-success pull-right"/>
					{#<button type="submit" class="btn btn-primary" form="form">Guardar</button>#}
				</div>
				
				{{ form_end(form) }}
			</div>
		</div>
	</div>

{% endblock %}
