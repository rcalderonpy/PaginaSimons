{% extends '@Contabilidad/BaseFormularios.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("js/entidades.js") }}"></script>
    <script src="{{ asset("js/ventas.js") }}"></script>
